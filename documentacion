///////// VER CUANTO EL SCROLL DEL LA VENTANA ES DESPALZADO   ///
window.onscroll: es el encargado de llamar la funcion cada que se mueva

    window.onscroll = function (){
        // Obtenemos la posicion del scroll en pantall
        var scroll = document.documentElement.scrollTop || document.body.scrollTop;
        console.log(scroll);
        // Realizamos alguna accion cuando el scroll este entre la posicion 300 y 400
        if(scroll > 300 && scroll < 400){
            console.log("Pasaste la posicion 300 del scroll" + scroll);
            
        }
    }

//  Desaparecer algo  //
  display: none;
//Muestra el cuadro//
display:block;

//Agregar sombra a los div //
  box-shadow: rgb(150,150,150) 1px 0px 10px; /*Agregar sombra*/

